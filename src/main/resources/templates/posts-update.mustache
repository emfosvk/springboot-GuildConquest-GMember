{{>layout/header}}

<h1>게시글 수정</h1>
<div class="col-md-12">
    <div class="com-md-4">
        <form>
            <div class="form-group">
                <label for="frmE_text">글 번호</label>
                <input type="text" class="form-control" id="frmE_id" name="id" value="{{post.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="frmE_text">제목</label>
                <input type="text" class="form-control" id="frmE_title" name="title" value="{{post.author}}">
            </div>
            <div class="form-group">
                <label for="frmE_author">작성자</label>
                <input type="text" class="form-control" id="frmE_author" name="author" value="{{post.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="frmE_content">내용</label>
                <input type="text" class="form-control" id="frmE_content" name="content" value="{{post.content}}">
            </div>

        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn_update">수정</button>
        <button type="button" class="btn btn-danger" id="btn_delete">삭제</button>
    </div>
</div>



{{>layout/footer}}